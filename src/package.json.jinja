{
  "name": "{{ appname }}",
  "private": true,
  "scripts": {
    "dev": "vite",
    "run": "caddy file-server --root build/ --listen \"${ {{- envprefix }}__SERVER__HOST:-0.0.0.0}:${ {{- envprefix }}__SERVER__PORT:-{{ port -}} }\" --access-log",
    "build": "tsc && vite build",
    "clean": "rm --recursive --force build/",
    "update": "ncu --peer --doctor --upgrade && npm i --no-audit --no-fund",
    "postupdate": "rm --recursive --force .tmp/",
    "test": "tsc && vite build --outDir .tmp/",
    "posttest": "rm --recursive --force .tmp/"
  },
  "dependencies": {
    "@mantine/core": "^7.7.1",
    "@mantine/hooks": "^7.7.1",
    "@mantine/notifications": "^7.7.1",
    "@tabler/icons-react": "^3.1.0",
    "immer": "^10.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet-async": "^2.0.4",
    "react-router-dom": "^6.22.3",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@types/node": "20.11.1",
    "@types/react": "^18.2.74",
    "@types/react-dom": "^18.2.23",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.0",
    "npm-check-updates": "^16.14.18",
    "postcss": "^8.4.38",
    "postcss-preset-mantine": "^1.13.0",
    "postcss-simple-vars": "^7.0.1",
    "typescript": "^5.4.3",
    "vite": "^5.1.5"
  }
}
