---
version: "3"

tasks:
  template:
    desc: Fetch template updates
    interactive: true
    env:
      GIT_CONFIG_COUNT: 1
      GIT_CONFIG_KEY_0: commit.gpgsign
      GIT_CONFIG_VALUE_0: false
    cmds:
      - >
        copier
        update
        --answers-file
        .copier-answers.yaml
        {{ '{{ .CLI_ARGS }}' }}
  flake:
    desc: Update flake.lock
    cmds:
      - >
        nix
        --accept-flake-config
        --extra-experimental-features 'nix-command flakes'
        --no-warn-dirty
        flake
        update
        {{ '{{ .CLI_ARGS }}' }}
  fmt:
    desc: Format files
    cmds:
      {%- if docs %}
      - task: install-docs-internal
      {%- endif %}
      - task: install-internal
      - >
        trunk
        fmt
        {{ '{{ .CLI_ARGS }}' }}
  lint:
    desc: Lint files
    cmds:
      {%- if docs %}
      - task: install-docs-internal
      {%- endif %}
      - task: install-internal
      - >
        trunk
        check
        {{ '{{ .CLI_ARGS }}' }}
  {%- if docs %}
  remove-docs-node-modules:
    desc: Clean docs node_modules
    dir: docs
    cmds:
      - >
        rm
        --recursive
        --force
        ./node_modules/
    status:
      - >
        test
        '!'
        -d
        ./node_modules/
  install-docs:
    desc: Install docs dependencies
    dir: docs
    sources:
      - ./package.json
      - ./package-lock.json
      - ../flake.lock
      - ../*.nix
      - ../Taskfile.dist.{yaml,yml}
      - ../{taskfile,Taskfile}.{yaml,yml}
    generates:
      - ./node_modules/**/*
    cmds:
      - >
        npm
        install
        {{ '{{ .CLI_ARGS }}' }}
  install-docs-internal:
    desc: Install docs dependencies quietly
    internal: true
    dir: docs
    cmds:
      - task: install-docs
        vars:
          CLI_ARGS: >
            --prefer-offline
            --no-audit
            --no-fund
            --quiet
            --no-progress
  update-docs:
    desc: Update docs dependencies
    dir: docs
    cmds:
      - task: install-docs-internal
      - >
        npm
        run
        update
        --
        {{ '{{ .CLI_ARGS }}' }}
  test-docs:
    desc: Test docs
    dir: docs
    cmds:
      - task: install-docs-internal
      - >
        npm
        run
        test
        --
        {{ '{{ .CLI_ARGS }}' }}
  docs:
    desc: Run docusaurus
    dir: docs
    interactive: true
    cmds:
      - task: install-docs-internal
      - >
        npm
        run
        docs
        --
        {{ '{{ .CLI_ARGS | default "start --host 0.0.0.0" }}' }}
  {%- endif %}
  remove-node-modules:
    desc: Remove node_modules
    cmds:
      - >
        rm
        --recursive
        --force
        ./node_modules/
    status:
      - >
        test
        '!'
        -d
        ./node_modules/
  clean:
    desc: Clean build outputs
    cmds:
      - >
        rm
        --recursive
        --force
        ./build/
    status:
      - >
        test
        '!'
        -d
        ./build/
  purge:
    desc: Clean everything
    cmds:
      - defer:
          task: clean
      - defer:
          task: remove-node-modules
      {%- if docs %}
      - defer:
          task: remove-docs-node-modules
      {%- endif %}
  install:
    desc: Install dependencies
    sources:
      - ./package.json
      - ./package-lock.json
      - ./flake.lock
      - ./*.nix
      - ./Taskfile.dist.{yaml,yml}
      - ./{taskfile,Taskfile}.{yaml,yml}
    generates:
      - ./node_modules/**/*
    cmds:
      - >
        npm
        install
        {{ '{{ .CLI_ARGS }}' }}
  install-internal:
    desc: Install dependencies quietly
    internal: true
    cmds:
      - task: install
        vars:
          CLI_ARGS: >
            --prefer-offline
            --no-audit
            --no-fund
            --quiet
            --no-progress
  ci:
    desc: Clean install dependencies
    sources:
      - ./package.json
      - ./package-lock.json
      - ./flake.lock
      - ./*.nix
      - ./Taskfile.dist.{yaml,yml}
      - ./{taskfile,Taskfile}.{yaml,yml}
    generates:
      - ./node_modules/**/*
    cmds:
      - >
        npm
        ci
        {{ '{{ .CLI_ARGS }}' }}
  dev:
    desc: Run in development mode
    interactive: true
    cmds:
      - task: install-internal
      - >
        npm
        run
        dev
        --
        {{ '{{ .CLI_ARGS }}' }}
  build-internal:
    desc: Build outputs
    internal: true
    sources:
      - ./src/**/*
      - ./public/**/*
      - ./index.html
      - ./tsconfig.json
      - ./vite.config.ts
      - ./flake.lock
      - ./*.nix
      - ./Taskfile.dist.{yaml,yml}
      - ./{taskfile,Taskfile}.{yaml,yml}
    generates:
      - ./build/**/*
    cmds:
      - >
        npm
        run
        build
        --
        {{ '{{ .CLI_ARGS }}' }}
  build:
    desc: Build outputs
    cmds:
      - task: install-internal
      - task: build-internal
  update:
    desc: Update dependencies
    cmds:
      - task: install-internal
      - >
        npm
        run
        update
        {{ '{{ .CLI_ARGS }}' }}
      - task: install-internal
  docker:
    desc: Run in docker container
    interactive: true
    cmds:
      - >
        docker
        compose
        up
        --build
        --force-recreate
        --remove-orphans
        {{ '{{ .CLI_ARGS }}' }}
